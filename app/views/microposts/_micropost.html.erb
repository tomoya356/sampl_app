<li class="micropost" id="micropost-<%= micropost.id %>">
  <div class="img_container">
    <p><%= link_to micropost do %>
      <%= image_tag micropost.picture.url if micropost.picture? %>
    <% end %>
    </p>
  </div>
  <% unless request.path.include?("users") %>
    <div class="profile">
      <div class="content">
        <div class="sub">
          <p><%= link_to gravatar_for(micropost.user, size: 50), micropost.user %></p>
        </div>
        <div class="main">
          <p class="name"><%= micropost.user.name %></p>
        </div>
      </div>
    </div>
  <% end %>
</li>