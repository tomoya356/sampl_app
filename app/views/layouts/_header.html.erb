

<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "Snap Post", root_path, id: "logo" %>
    <% if logged_in? %>
      <div class="search-form">
        <%= render 'shared/search' %>
      </div>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "投稿", new_micropost_path %></li>
          <li><%= link_to "ユーザー", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                  <i class="far fa-user-circle"></i> プロフィール
                <% end %>
              </li>
              <li>
                <%= link_to notifications_path(current_user) do %>
                  <i class="far fa-bell"></i> 通知
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <i class="fas fa-sliders-h"></i> 設定
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>